trylon PageMapper
superclass WebServer PageMapper

fields dir


create: dir
	this dir = dir


at: path
	if path starts-with: "/"
		path = path substr: 1
	log: "Mapping: ", path

	if path == "index.css"
		return WebServer StringPage new: css

	entry = dir[path]
	if entry is-directory
		return DirPage new: entry path: path
	else
		return SourcePage new: entry


